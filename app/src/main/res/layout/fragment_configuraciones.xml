<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/configuracion_login"
    android:background="@color/white"
    tools:context="Configuraciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="116dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Notificacion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/notificaciones"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/notifications"
            android:background="@drawable/border"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iniciar_sesion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/iniciar_sesion"
            android:textColor="@color/black"
            android:background="@drawable/border"
            android:layout_marginTop="60dp"
            android:drawableLeft="@drawable/baseline_login_24"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Cerrar Sesion"
            android:textColor="@color/black"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
